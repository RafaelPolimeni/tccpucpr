<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	
	<lifecycle>
		<phase-listener>br.com.login.LoginErrorPhaseListener</phase-listener>
	</lifecycle>
		
	<application>
    	<!-- tell JSF to use Facelets -->
    	<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
    	
    	<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>
		
		<resource-bundle>  
       		<base-name>br.com.messageresource.Labels</base-name>  
       		<var>labels</var>  
   		</resource-bundle>
   		<resource-bundle>  
       		<base-name>br.com.messageresource.Messages</base-name>    
       		<var>messages</var>
   		</resource-bundle> 
	   	<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
    </application>

	<!-- validators -->
	<validator>
		<validator-id>validaObrigatorio</validator-id>
		<validator-class>br.com.validator.ValidadorObrigatorio</validator-class>
	</validator>
	
	<validator>
		<validator-id>validadorObrigatorioShuttle</validator-id>
		<validator-class>br.com.validator.ValidadorObrigatorioShuttle</validator-class>
	</validator>
	<!-- validators -->
	
	<!-- converters -->
	<converter>
		<converter-id>textAreaConverter</converter-id>
		<converter-class>br.com.converter.TextAreaConverter</converter-class>
	</converter>
	
	<converter>
		<converter-id>listShuttleConverter</converter-id>
		<converter-class>br.com.converter.ListShuttleConverter</converter-class>
	</converter>
	
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>successLogin</from-outcome>
			<to-view-id>/pages/welcome.jsf</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>failureLogin</from-outcome>
			<to-view-id>/login.jsf</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/logout.jsf</to-view-id>
			<redirect/>
		</navigation-case>
		
		<!-- Manage users -->
		<navigation-case>
			<from-outcome>manageUsers</from-outcome>
			<to-view-id>/pages/admin/user/user.jsf</to-view-id>
		</navigation-case>
		
		<!-- Manage roles -->
		<navigation-case>
			<from-outcome>manageRoles</from-outcome>
			<to-view-id>/pages/admin/role/role.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>