<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	
	<lifecycle>
		<phase-listener>br.com.login.LoginErrorPhaseListener</phase-listener>
	</lifecycle>
		
	<application>
    	<!-- tell JSF to use Facelets -->
    	<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
    	
    	<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		
		<resource-bundle>  
       		<base-name>br.com.messageresource.Labels</base-name>  
       		<!-- Var define nome do mapa de variaveis que contem as mensagens -->  
       		<var>labels</var>  
   		</resource-bundle>
	   	<!--
	   		<resource-bundle>  
	       		<base-name>br.com.messageresource.Messages</base-name>  
	       		 Var define nome do mapa de variaveis que contem as mensagens  
	       		<var>messages</var>  
	   		</resource-bundle> 
	   	-->
	   	<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
    </application>

	<managed-bean>
		<description>User Bean</description>
		<managed-bean-name>userBean</managed-bean-name>
		<managed-bean-class>br.com.bean.UserBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>userServiceImpl</property-name>
			<property-class>br.com.service.UserService</property-class>
			<value>#{userServiceImpl}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<description>Users Bean</description>
		<managed-bean-name>usersBean</managed-bean-name>
		<managed-bean-class>br.com.bean.UsersBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>usersServiceImpl</property-name>
			<property-class>br.com.service.UsersService</property-class>
			<value>#{usersServiceImpl}</value>
		</managed-property>
		<managed-property>
			<property-name>roleServiceImpl</property-name>
			<property-class>br.com.service.RoleService</property-class>
			<value>#{roleServiceImpl}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<description>Role Bean</description>
		<managed-bean-name>roleBean</managed-bean-name>
		<managed-bean-class>br.com.bean.RoleBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>roleServiceImpl</property-name>
			<property-class>br.com.service.RoleService</property-class>
			<value>#{roleServiceImpl}</value>
		</managed-property>
	</managed-bean>
	
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>successLogin</from-outcome>
			<to-view-id>/pages/welcome.jsf</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>failureLogin</from-outcome>
			<to-view-id>/login.jsf</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/logout.jsf</to-view-id>
			<redirect/>
		</navigation-case>
		
		<!-- Manage users -->
		<navigation-case>
			<from-outcome>manageUsers</from-outcome>
			<to-view-id>/pages/admin/user/user.jsf</to-view-id>
		</navigation-case>
		
		<!-- Manage roles -->
		<navigation-case>
			<from-outcome>manageRoles</from-outcome>
			<to-view-id>/pages/admin/role/role.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>